{
  "name": "vinos-backend",
  "description": "Aplicaci√≥n de backend para Vinoteca",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "start": "set DEBUG=index,index:* & nodemon index.js",
    "test": "nyc --reporter=lcov --reporter=html --reporter=text mocha **/*spec.js",
    "test-watch": "mocha -R list -w **/*.spec.js",
    "test-single": "mocha $1",
    "test-single-watch": "mocha -R list -w $1",
    "clean": "rimraf dist .cache .cache-loader"
  },
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "chalk": "^4.1.1",
    "express": "^4.16.2",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-match": "^1.1.1",
    "cors": "^2.8.5",
    "mocha": "^9.0.1",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcesc-code/vinos-back.git"
  },
  "keywords": [
    "Javacript",
    "Node",
    "UOC",
    "Express"
  ],
  "author": {
    "name": "Francesc Brugarolas"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fcesc-code/vinos-back/issues"
  },
  "homepage": "https://github.com/fcesc-code/vinos-back#readme",
  "nodemonconfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules",
      ".gitignore",
      "sonar-project.properties",
      "README.md",
      "/**/.github"
    ],
    "delay": 2000,
    "env": {
      "PORT": 3010
    }
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "build"
    ]
  }
}
