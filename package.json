{
  "name": "vinos-backend",
  "description": "Aplicaci√≥n de backend para Vinoteca",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "start": "set DEBUG=index,index:* & nodemon index.js",
    "test": "nyc --reporter=lcov --reporter=html --reporter=text mocha **/*spec.js",
    "test-watch": "mocha -R list -w **/*.spec.js",
    "test-single": "mocha $1",
    "test-single-watch": "mocha -R list -w $1",
    "test-clean": "rimraf coverage .nyc_output"
  },
  "private": true,
  "dependencies": {
    "body-parser": "^1.20.2",
    "chalk": "^5.2.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "nodemon": "^2.0.22"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-match": "^1.1.1",
    "cors": "^2.8.5",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.1.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcesc-code/vinos-back.git"
  },
  "keywords": [
    "Javacript",
    "Node",
    "UOC",
    "Express"
  ],
  "author": {
    "name": "Francesc Brugarolas"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fcesc-code/vinos-back/issues"
  },
  "homepage": "https://github.com/fcesc-code/vinos-back#readme",
  "nodemonconfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules",
      ".gitignore",
      "sonar-project.properties",
      "README.md",
      "/**/.github",
      "/**/.nyc_output",
      "/coverage"
    ],
    "delay": 2000,
    "env": {
      "PORT": 3010
    }
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "**/WINEDATA.js"
    ]
  }
}
